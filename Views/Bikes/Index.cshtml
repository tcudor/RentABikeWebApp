@model IEnumerable<RentABikeWebApp.Models.Bike>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                @if (item.Image != null && item.Image.Length > 0)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(item.Image)" alt="Bike Image" style="height:30em;width:auto"/>
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Type</h5>
                    <p class="card-text">Price Per Hour: @item.PricePerHour</p>
                    <p class="card-text">Status: @item.Status</p>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Details</a>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
