@model IEnumerable<RentABikeWebApp.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservation List</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <a class="btn btn-primary mb-3" asp-action="Create">Create New Reservation</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Total Cost</th>
                            <th>Bike Type</th>
                            <th>Bike Image</th>
                            <th>Customer Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StartDate.ToString("MM/dd/yyyy")</td>
                                <td>@item.EndDate.ToString()</td>
                                <td>@item.TotalCost</td>
                                <td>@item.Bike.Type</td>
                                @if (item.Bike.Image != null && item.Bike.Image.Length > 0)
                                {
                                    <td><img src="data:image/png;base64,@Convert.ToBase64String(item.Bike.Image)" alt="Bike Image" class="img-thumbnail" width="100"></td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td>@item.Customer.Name</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
