@model RentABikeWebApp.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Reservation Details</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8">@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">End Date:</dt>
                <dd class="col-sm-8">@Model.EndDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Total Cost:</dt>
                <dd class="col-sm-8">@Model.TotalCost</dd>

                <dt class="col-sm-4">Bike:</dt>
                <dd class="col-sm-8">
                    <a asp-action="Details" asp-controller="Bikes" asp-route-id="@Model.BikeId">@Model.Bike.DisplayName()</a>
                </dd>

                <dt class="col-sm-4">Customer:</dt>
                <dd class="col-sm-8">@Model.Customer.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Reservation</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
